#include <stdio.h>

int main() {
    int n, b[20], temp, i;
    int found = 0;

    printf("Enter array size here: ");
    scanf("%d", &n);

    printf("Enter array elements here:\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &b[i]);
    }

    printf("Enter the array element to find: ");
    scanf("%d", &temp);

    for (i = 0; i < n; i++) {
        if (temp == b[i]) {
            found = 1;
            printf("The element %d is present at position %d\n", temp, i);
            break;
        }
    }

    if (!found) {
        printf("The element %d is not present in the array\n", temp);
    }

    return 0;
}
